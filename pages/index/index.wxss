page {
    background-image: url(http://www.5ivilla.com/wave/res/slider-1.jpg);
    background-size: cover;
}

.container {
    padding-top: 150px;
}

.notice {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
}

.logo {
    position: absolute;
    width: 100%;
    height: 50px;
    top: 54px;
}

.section {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: -60rpx;
}

.section .item {
    width: 46%;
    padding: 20rpx 0;
    color: #fff;
    text-align: center;
    background-color: #008BC7;
    margin: 0 10rpx 20rpx;
}

.section .item .iconfont {
    font-size: 32px;
}

.section .item .text {
    display: block;
    font-size: 16px;
}

.bottom {
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 99;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #aaa;
}

.usermotto {
    margin-top: 200px;
}

.container .pop-left {
    width: 100%;
    height: 100%;
    padding: 30px 20px 20px;
    background-color: rgba(255,255,255,0.95);
}

.block-msg {
    margin-top: 30px;
    font-size: 12px;
    text-align: center;
    margin-bottom: 10px;
    color: #008BC7;
}

.container .form-group {
    margin-bottom: 20px;
}

.container .submit {
    background-color: #008BC7;
}