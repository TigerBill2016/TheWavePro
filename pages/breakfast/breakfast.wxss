.wrap {
  padding: 20rpx;
}

.food {
  margin-bottom: 20px;
}

.cover {
  display: block;
  width: 100%;
}

.food .select-group {
  display: flex;
  justify-content: space-between;
}

.food .select-group .item {
  width: 300rpx;
  line-height: 50px;
}

.select-group .item {
  font-size: 18px;
  text-align: center;
  border: 2px solid #efefef;
}

.select-group .item.active {
  border-color: #008bc7;
}

.select-group .item.disable {
  color: #999;
}

.time {
  margin-bottom: 20px;
}

.time .info {
  font-size: 12px;
  color: #000;
}

.time .select-group .item {
  display: block;
  line-height: 50px;
  margin-bottom: 8px;
}

.wrap .submit {
  background-color: #008bc7;
  border-radius: 2px;
}

.btn-area {
  padding: 20px 10px;
}

.btn-area .cancel {
  border-radius: 2px;
  margin-top: 10px;
}

.tips {
  display: block;
  text-align: right;
  font-size: 12px;
  padding: 4px 0;
  color: #ed6a0c;
  background-color: #fffbe8;
}
