.panel {
  background-color: #fff;
  margin-bottom: 8px;
}

.userinfo {
  position: relative;
  display: flex;
  padding: 20rpx;
}

.userinfo .avatar {
  display: block;
  width: 160rpx;
  height: 160rpx;
}

.userinfo .nickname {
  flex: 1;
  margin-left: 10px;
}

.userinfo .right {
  width: 35px;
  font-size: 20px;
  line-height: 160rpx;
  text-align: right;
}

.main {
  padding: 10px 15px;
}

.nodata {
  display: block;
  text-align: center;
  line-height: 200px;
}
